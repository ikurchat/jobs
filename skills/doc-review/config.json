{
  "formatting": {
    "font_name": "Times New Roman",
    "font_size_pt": 14,
    "alignment": "justify",
    "line_spacing": 1.15,
    "first_line_indent_cm": 1.25,
    "space_after_pt": 0,
    "space_before_pt": 0
  },

  "page": {
    "width_cm": 21.0,
    "height_cm": 29.7,
    "margin_left_cm": 3.0,
    "margin_right_cm": 1.0,
    "margin_top_cm": 2.0,
    "margin_bottom_cm": 2.0
  },

  "structure": {
    "header": {
      "type": "table",
      "rows": 1,
      "cols": 2,
      "borders": false,
      "left_cell": "title",
      "right_cell": "addressee"
    },
    "body": {
      "blocks": ["resume", "details", "conclusions"],
      "separator": "empty_paragraph",
      "visible_subheaders": false
    },
    "appendix": {
      "type": "table",
      "rows": 1,
      "cols": 2,
      "borders": false,
      "left_cell_text": "Приложение:",
      "right_cell_format": "numbered_list"
    },
    "signature": {
      "type": "table",
      "rows": 1,
      "cols": 2,
      "borders": false,
      "left_cell": "position",
      "right_cell": "full_name"
    },
    "footer": {
      "content_template": "{executor_name}, тел. {executor_phone}",
      "font_size_pt": 10
    }
  },

  "thresholds": {
    "rewrite_format_issues": 5,
    "rewrite_content_issues": 3,
    "max_versions": 10
  },

  "versioning": {
    "pattern": "{base_name}_v{version}",
    "initial_version": 1
  },

  "encryption": {
    "password_env_var": "DOC_DEFAULT_PASSWORD"
  },

  "pdf_conversion": {
    "command": "libreoffice",
    "args": ["--headless", "--norestore", "--convert-to", "pdf", "--outdir"],
    "timeout_seconds": 120
  },

  "work_dir": "/dev/shm/doc-review",

  "analysis": {
    "tolerance_pt": 0.5,
    "tolerance_cm": 0.1,
    "max_file_size_mb": 50
  }
}
